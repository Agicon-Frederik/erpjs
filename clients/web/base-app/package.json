{
  "name": "base-app",
  "version": "0.1.0",
  "description": "The base application to run all the others",
  "main": "index.ts",
  "scripts": {
    "start": "node .",
    "build": "babel --delete-dir-on-start --out-dir dist --copy-files --ignore \"**/__tests__/**,**/__mocks__/**\" --no-copy-ignored src",
    "start:dev": "nodemon dist/index.js",
    "build:dev": "tsc --watch --preserveWatchOutput",
    "dev": "npm-run-all -p build:dev start:dev"
  },
  "dependencies": {
    "@podium/layout": "^4.5.1",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/podium": "^1.0.0",
    "@types/express": "^4.17.12",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.3.2"
  }
}
