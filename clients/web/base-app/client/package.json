{
  "name": "base-app-client",
  "version": "0.1.0",
  "description": "The base application to run all the others",
  "main": "index.ts",
  "scripts": {
    "clean": "rimraf node_modules/.cache/snowpack",
    "start": "node .",
    "build": "babel --delete-dir-on-start --out-dir dist --copy-files --ignore \"**/__tests__/**,**/__mocks__/**\" --no-copy-ignored src",
    "start:dev": "nodemon dist/index.js",
    "build:dev": "tsc --watch --preserveWatchOutput",
    "dev": "npm-run-all -p build:dev start:dev",
    "prettier": "prettier --write --plugin-search-dir=. \"*.ts\"",
    "prettier:check": "prettier --check --plugin-search-dir=. \"*.ts\"",
    "svelte-check": "svelte-check --ignore \"src/stories,src/absorb\"",
    "lint": "eslint \"*.{js,ts}\" --resolve-plugins-relative-to . --quiet",
    "lint:fix": "eslint --fix \"*.{js,ts}\" --resolve-plugins-relative-to ."
  },
  "dependencies": {
    "@podium/browser": "^1.0.0-beta.2",
    "@podium/layout": "^4.5.1",
    "keycloak-js": "^12.0.4"
  },
  "devDependencies": {
    "@snowpack/plugin-dotenv": "^2.1.0",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@snowpack/web-test-runner-plugin": "^0.2.2",
    "@types/podium": "^1.0.0",
    "@types/express": "^4.17.12",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.1.1",
    "rimraf": "^3.0.2",
    "snowpack": "^3.3.7",
    "typescript": "^4.3.2",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0"
  }
}
