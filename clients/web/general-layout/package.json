{
  "scripts": {
    "start": "snowpack dev",
    "build": "snowpack build",
    "clean": "rimraf node_modules/.cache/snowpack",
    "dev": "npm-run-all -p watch podlet",
    "podlet": "node podlet.js",
    "test": "web-test-runner \"src/**/*.test.ts\"",
    "watch": "nodemon -e svelte,ts,js --watch src --exec \"yarn build\"",
    "prettier": "prettier --write --plugin-search-dir=. \"src/**/*.svelte\" \"src/**/*.ts\"",
    "prettier:check": "prettier --check --plugin-search-dir=. \"src/**/*.svelte\" \"src/**/*.ts\"",
    "svelte-check": "svelte-check --ignore \"src/stories,src/absorb\"",
    "lint": "eslint \"./src/**/*.{js,ts}\" --resolve-plugins-relative-to . --quiet",
    "lint:fix": "eslint --fix \"./src/**/*.{js,ts}\" --resolve-plugins-relative-to ."
  },
  "dependencies": {
    "svelte": "^3.37.0",
    "@podium/browser": "^1.0.0-beta.2",
    "@podium/podlet": "^4.3.3",
    "express": "^4.17.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@snowpack/plugin-dotenv": "^2.1.0",
    "@snowpack/plugin-svelte": "^3.6.1",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@snowpack/web-test-runner-plugin": "^0.2.2",
    "@testing-library/svelte": "^3.0.3",
    "@tsconfig/svelte": "^1.0.10",
    "@types/chai": "^4.2.17",
    "@types/mocha": "^8.2.2",
    "@types/snowpack-env": "^2.3.3",
    "@web/test-runner": "^0.13.3",
    "carbon-components-svelte": "^0.12.0",
    "chai": "^4.3.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.1.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "snowpack": "^3.3.7",
    "svelte-check": "^1.1.28",
    "svelte-preprocess": "^4.7.2",
    "typescript": "^4.2.4",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-plugin-svelte3": "^3.2.0"
  }
}
